.header {
  height: 130px;
  background: white;
}

.header .profile {
  height: 100%;
}
.profile{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.profile .avatar {
  width: 300rpx;
  height: 300rpx;
  margin: 14rpx 20rpx;
  border-radius: 50rpx;
}
.profile .nickName{
  font-size: 40rpx;
  padding-bottom: 20rpx
}
.profile .description {
  display: inline-block;
  margin: 7.5px auto;
  height: 50px;
}

.description .item {
    height: 50%;
    display: flex;
    align-items: center;
}

.profile .add {
    float: right;
    margin: 15px 10px;
    height: 35px;
    width: 35px;
}
.listTitle{
  padding: 23rpx 0rpx;
  border: 2rpx #B3B3B3 solid;
  border-bottom:none; 
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
}
.content{
  border-bottom:  2rpx #B3B3B3 solid;
  background: #fff;
}
.listIcon{
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}
.list{
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #636363;
}
.header .tablist {
    height: 50%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.tablist .tab {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50px;
    width: 25%;
    margin: 7.5px 0px;
    border-right: 1px solid #eceff4;
}

.tab .content{
    width: 25px;
    height: 50px;
    font-size: 12px;
    color: #B3B3B3;
}

.tab .image {
    width: 25px;
    height: 25px;
    margin-top: 10px;
}

